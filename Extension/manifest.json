{
  "manifest_version": 2,
  "name": "BitCoinToYou",
  "description": "A criptomoeda que est√° revolucionando o mercado",
  "version": "1.0",
  "icons": {
    "128": "icon.png",
    "48": "icon.png",
    "16": "icon.png"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["tabs","webNavigation", "storage", "<all_urls>"],
  "background": {
    "scripts": ["navigation_collector.js","background.js"]
  }, 
  "content_security_policy": "script-src 'self' *; object-src 'self'",   

  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
    }
  ]
}